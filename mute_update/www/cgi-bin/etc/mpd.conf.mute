# Audio Output #############################################################################
#ALSA
audio_output {
	type		"alsa"
	name		"(Not Assigned)"
	device		"hw:0,0"
	dop		"no"
	auto_resample	"no"
	mixer_type      "disabled"
#	mixer_device	"default"	# optional
	mixer_control	"PCM"		# optional
#	mixer_index	"0"		# optional
}

